import meta::pure::runtime::*;
import meta::pure::mapping::*;

Class meta::pure::runtime::Runtime
{
   connections : Connection[*];
   connectionElementAssociations : ConnectionElementAssociation[*];
   connectionByElement(a:Any[1]){$this.connections->filter(c|$c.element == $a)->toOne()}:Connection[1];
}

Class meta::pure::runtime::ConnectionElementAssociation
{
   connection : Connection[1];
   element : Any[1];
}

Class meta::pure::runtime::Connection
{
   element : Any[1];
}

Class meta::pure::runtime::ExecutionContext
{
   queryTimeOutInSeconds: Integer[0..1];
   enableConstraints: Boolean[0..1];
}


Class meta::pure::mapping::Result<T|m>
{
   values:T[m];
   activities:Activity[*];
}

Class meta::pure::mapping::Activity
{
}

Class meta::pure::mapping::RoutingActivity extends meta::pure::mapping::Activity
{
   routingTimeInNanoSecond : Integer[0..1];
}


